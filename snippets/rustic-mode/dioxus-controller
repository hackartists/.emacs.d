# -*- mode: snippet -*-
#name : dioxus-controller
#key : dioxus-controller
#contributor : hackartist
# --
use dioxus::prelude::*;
use by_macros::*;

#[derive(Clone, Copy, DioxusController)]
pub struct Controller {
pub lang: Language,
}

impl Controller {
pub fn new(lang: Language) -> std::result::Result<Self, RenderError> {
        let ctrl = Self {
        lang
        };

        Ok(ctrl)
    }
}
