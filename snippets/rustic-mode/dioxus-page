# -*- mode: snippet -*-
#name : dioxus-page
#key : dioxus-page
#contributor : hackartist
# --

#![allow(non_snake_case)]
use dioxus::prelude::*;
use dioxus_translate::*;

#[component]
pub fn ${1:$(string-inflection-upcase-function (file-name-nondirectory (directory-file-name (file-name-directory buffer-file-name))))}Page(
    lang: Language,
) -> Element {
    let tr: $1Translate = translate(&lang);

    rsx! {
    div {id: "${1:$(string-inflection-kebab-case-function yas-text)}", "$1 page"}
    }
}

